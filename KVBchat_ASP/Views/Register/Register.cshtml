@model KVBchat_ASP.Models.User.UserRegistrationViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Registration</h2>

@using (Html.BeginForm("Register", "Register", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Nickname)
        @Html.TextBoxFor(x => x.Nickname)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email)
        @Html.ValidationMessageFor(x=>x.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone)
        @Html.TextBoxFor(x => x.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.MiddleName)
        @Html.TextBoxFor(x => x.MiddleName)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ThirdName)
        @Html.TextBoxFor(x => x.ThirdName)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Birthdate)
        @Html.TextBoxFor(x => x.Birthdate)
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
}