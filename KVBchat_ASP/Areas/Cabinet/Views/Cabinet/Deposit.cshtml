@model KVBchat_ASP.Areas.Cabinet.Models.UserDepositViewModel
@{
    ViewBag.Title = "Deposit";
}

<h2>Deposit</h2>
@using (Html.BeginForm("Deposit", "Cabinet", new { area = "Cabinet" }, FormMethod.Post, null))
{
    <div>
        @Html.HiddenFor(x => x.Balance)
        @Html.HiddenFor(x => x.Id)
        <div>
            @Html.LabelFor(x => x.Balance):
            @Html.DisplayTextFor(x => x.Balance)
        </div>
        <div>
            @Html.LabelFor(x => x.Deposit):
            @Html.TextBoxFor(x => x.Deposit)
            @Html.ValidationMessageFor(x => x.Deposit)
            @ViewBag.Orror
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Deposit</button>
        </div>
    </div>

}
