@model KVBchat_ASP.Areas.Authentication.Models.UserRegistrationViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Registration</h2>

@using (Html.BeginForm("Register", "Register", new { area = "Authentication" }, FormMethod.Post, null))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Nickname)
        @Html.TextBoxFor(x => x.Nickname)
        @Html.ValidationMessageFor(x => x.Nickname)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone)
        @Html.TextBoxFor(x => x.Phone)
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password)
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName)
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName)
        @Html.ValidationMessageFor(x => x.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Birthdate)
        @Html.EditorFor(x => x.Birthdate)
        @Html.ValidationMessageFor(x => x.Birthdate)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Card):
        @Html.TextBoxFor(x => x.Card)
        @Html.ValidationMessageFor(x => x.Card)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CardExpirationDate):
        @Html.TextBoxFor(x => x.CardExpirationDate)
        @Html.ValidationMessageFor(x => x.CardExpirationDate)
        @ViewBag.Orror
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CardCVV):
        @Html.TextBoxFor(x => x.CardCVV)
        @Html.ValidationMessageFor(x => x.CardCVV)
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
}